{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./src/",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "watch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "declaration": true,
    "strict": true,
    "declarationDir": "dist/types",
    "noEmitOnError": true
  }
}
